<!DOCTYPE html>
<html>
  <head>
    <title>Wiki219</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <% if user_signed_in? %>
        <a class="navbar-brand" href="#">User: <%= @current_user %></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">      
            <a class="nav-link" href="#"><%= link_to "New Article", new_article_path %><span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#"><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></a>
          </li>
      <% else %>
          <li class="nav-item">
            <a class="nav-link" href="#"><%= link_to "Login", new_user_session_path %></a>
          </li>
          <li class="nav-item">
            <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true"><%= link_to "Signup", new_user_registration_path %></a>
          </li>
     <% end %>
        </ul>
      </div>
    </nav>

    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="container">
      <div class="col-lg-10-offset">
        <%= yield %>
      </div>
    </div>
    

  </body>
</html>
