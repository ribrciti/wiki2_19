	img {
		max-width: 200px;
		max-height: 200px;
	}
</style>

<p id="notice"><%= notice %></p>

<h1>
	<%= @article.title %>		
</h1>  

<p>	
  <%= image_tag @article.image_url, align: 'right' %>
