<p id="notice"><%= notice %></p>

<% if request.original_url.split('=').last.include? '/' %>
  <h1>All Articles (<%= @articles_number %>) </h1>
  <br>
<% else %>
  <h1>All <%= request.original_url.split('=').last.pluralize %> (<%= @articles_number %>)</h1>
  <br>
<% end %>

 
<% @articles.each do |article| %>
	<h4>
		<%= image_tag(article.image_url, width: 50, height: 50) %>
		<%= link_to article.title, article %>
	</h4>
  
  <p>
  	<%= truncate(article.body, length: 175) %>
    Article by:  <%= @current_user_email %>
  	
  </p>
<% end %>



     